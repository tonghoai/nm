<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>NodeJS Messenger</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
<div class="row" style="text-align: center;">
<div class="col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1">

    <div style="padding: 10px 0px;"><h1><span class="fa fa-sign-in"></span> Registration</h1></div>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group" style="margin-bottom: 10px; font-size: 18px;">
            <input type="text" class="form-control" name="nickname" placeholder="Nickname" style="padding: 22px 15px;" require>
        </div>
        <div class="form-group" style="margin-bottom: 10px; font-size: 18px;">
            <input type="text" class="form-control" name="username" placeholder="Username" style="padding: 22px 15px;" require>
        </div>
        <div class="form-group" style="margin-bottom: 10px; font-size: 18px;">
            <input type="password" class="form-control" name="password" placeholder="Password" style="padding: 22px 15px;" require>
        </div>
        <div class="form-group" style="margin-bottom: 10px; font-size: 18px;">
            <input type="text" class="form-control" name="email" placeholder="Email" style="padding: 22px 15px;" require>
        </div>

        <button type="submit" class="btn btn-primary btn-lg" style="width: 100%;">Registration</button>
    </form>

    <hr>

    <p>Already have an account? <a href="/"><span class="fa fa-sign-in"></span> Login</a></p>

</div>

</div>
</div>
</body>
</html>
